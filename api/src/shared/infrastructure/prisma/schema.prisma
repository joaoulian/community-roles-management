generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id String @id @default(uuid())
  name String
  communityId String
  permissions Permission[]
  allowList AllowedUser[]
}

model AllowedUser {
  id String @id @default(uuid())
  username String
  usernameType UsernameType
  Role Role? @relation(fields: [roleId], references: [id])
  roleId String
}

enum Permission {
  MANAGE_CHANNELS
  MANAGE_ROLES
  MANAGE_MEMBERSHIPS
  MANAGE_CONVERSATIONS
  ADMINISTRATOR
}

enum UsernameType {
  twitter
  wallet
}