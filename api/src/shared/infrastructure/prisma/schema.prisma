generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id          String        @id @default(uuid())
  name        String
  communityId String
  permissions Permissions[]
  users       UserRoles[]

  @@unique([communityId, name])
  @@map("role")
}

model Permissions {
  id          String   @id @default(uuid())
  communityId String?
  channelId   String?
  role        Role     @relation(fields: [roleId], references: [id])
  roleId      String
  list        String[]

  @@unique([roleId, channelId, communityId])
  @@map("permissions")
}

model UserRoles {
  role   Role   @relation(fields: [roleId], references: [id])
  roleId String
  userId String

  @@id([userId, roleId])
  @@map("user_roles")
}
